{
  "name": "trenz-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --ext .ts,.tsx --fix",
    "lint:check": "eslint . --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "setup-db": "node scripts/setup-db.js",
    "generate-secrets": "node scripts/generate-secrets.js",
    "verify": "node scripts/verify-setup.js",
    "clear-dummy-data": "node scripts/clear-dummy-data.js",
    "cleanup-stories": "node scripts/cleanup-expired-stories.js",
    "story-cleanup-service": "node scripts/setup-story-cleanup.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:seed": "tsx src/lib/seed.ts",
    "db:migrate": "prisma migrate deploy",
    "db:reset": "prisma migrate reset --force",
    "build:analyze": "ANALYZE=true npm run build",
    "build:production": "NODE_ENV=production npm run build",
    "start:production": "NODE_ENV=production npm run start",
    "test": "echo \"No tests specified\" && exit 0",
    "prepare": "husky install || true",
    "postinstall": "prisma generate"
  },
